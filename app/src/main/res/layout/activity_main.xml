<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/home_screen3"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"/>
    <View
        android:background="@color/colorBackgroundLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/img_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        android:tint="@android:color/holo_red_light"
        android:layout_width="120dp"
        android:src="@drawable/home_logo1"
        android:layout_height="100dp"/>
    <TextView
        android:id="@+id/txt_heading"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/signin_to_verify"
        app:layout_constraintTop_toBottomOf="@+id/img_logo"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_desc"
        android:layout_marginTop="10dp"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:typeface="monospace"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/good_morning_welcome_to_you_all"
        app:layout_constraintTop_toBottomOf="@+id/txt_heading"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/lbl_email"
        android:text="Email"
        android:textAllCaps="true"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/email_divider"

        app:layout_constraintStart_toEndOf="@+id/img_email"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/txt_email"
        android:layout_width="0dp"
        android:background="@null"
        android:hint="Enter email id"
        android:textSize="17sp"
        android:gravity="top"
        android:typeface="monospace"
        android:textColor="@color/colorSuccess"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lbl_email"
        android:textColorHint="@android:color/white"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@id/email_divider"
        app:layout_constraintStart_toEndOf="@+id/img_email"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginTop="10dp"
        android:id="@+id/email_divider"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"

        app:layout_constraintTop_toBottomOf="@+id/txt_email"
        android:layout_height="1dp"/>
    <ImageView
        android:id="@+id/img_email"
        android:layout_marginBottom="38dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_email"
        app:layout_constraintBottom_toTopOf="@+id/email_divider"
        android:tint="@color/colorAccent"
        app:layout_constraintTop_toTopOf="@+id/txt_email"
        app:layout_constraintStart_toStartOf="@+id/email_divider"
        android:layout_width="25dp"
        android:layout_height="25dp"/>


    <TextView
        android:id="@+id/lbl_password"
        android:text="Password"
        android:textAllCaps="true"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/password_divider"

        app:layout_constraintStart_toEndOf="@+id/img_password"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/email_divider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/txt_password"
        android:layout_width="0dp"
        android:background="@null"
        android:hint="*******"
        android:textSize="17sp"
        android:gravity="top"
        android:typeface="monospace"
        android:textColor="@color/colorSuccess"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lbl_password"
        android:textColorHint="@android:color/white"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@id/email_divider"
        app:layout_constraintStart_toEndOf="@+id/img_email"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginTop="10dp"
        android:id="@+id/password_divider"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"

        app:layout_constraintTop_toBottomOf="@+id/txt_password"
        android:layout_height="1dp"/>
    <ImageView
        android:id="@+id/img_password"
        android:layout_marginBottom="38dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_password"
        app:layout_constraintBottom_toTopOf="@+id/password_divider"
        android:tint="@color/colorAccent"
        app:layout_constraintTop_toTopOf="@+id/txt_password"
        app:layout_constraintStart_toStartOf="@+id/password_divider"
        android:layout_width="25dp"
        android:layout_height="25dp"/>
    <Button
        android:id="@+id/btn_signin"
        android:layout_width="match_parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="sign in"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/password_divider"
        android:background="@drawable/background_for_signin_screen"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_forgot"
        android:layout_width="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="forgot password"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_signin"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/image_facebook_in"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:tint="@android:color/white"
        android:layout_marginEnd="50dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/face_login1"
        app:layout_constraintTop_toBottomOf="@+id/txt_forgot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <ImageView
        android:id="@+id/image_google_in"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="33dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/google_login"
        android:tint="@android:color/white"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"

        app:layout_constraintTop_toBottomOf="@+id/txt_forgot"
        app:layout_constraintStart_toEndOf="@+id/image_facebook_in"

        android:layout_width="36dp"
        android:layout_height="36dp"/>
    <TextView
        android:id="@+id/txt_siginup"
        android:layout_width="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textStyle="bold"
        android:background="@drawable/background_for_screen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="3dp"
        android:text="@string/don_t_have_an_account_signup_now"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/image_google_in"

        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>